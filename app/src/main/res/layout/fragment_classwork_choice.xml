<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    tools:context=".ui.ClassworkChoiceFragment">

    <Button
        android:id="@+id/create_assignment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        android:drawableStart="@drawable/ic_assignment"
        android:text="Create an Assigment"
        android:gravity="start|center"
        android:drawablePadding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/create_quiz"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:drawableStart="@drawable/ic_quiz"
        android:text="Create a Quiz"
        android:gravity="start|center"
        android:drawablePadding="8dp"
        app:layout_constraintEnd_toEndOf="@+id/create_assignment"
        app:layout_constraintStart_toStartOf="@+id/create_assignment"
        app:layout_constraintTop_toBottomOf="@+id/create_assignment" />

    <Button
        android:id="@+id/post_material"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:drawableStart="@drawable/ic_book"
        android:text="Post a Material"
        android:gravity="start|center"
        android:drawablePadding="8dp"
        app:layout_constraintEnd_toEndOf="@+id/create_quiz"
        app:layout_constraintStart_toStartOf="@+id/create_quiz"
        app:layout_constraintTop_toBottomOf="@+id/create_quiz" />

</androidx.constraintlayout.widget.ConstraintLayout>